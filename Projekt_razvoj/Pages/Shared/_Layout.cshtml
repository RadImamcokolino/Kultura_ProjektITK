@using Microsoft.AspNetCore.Authentication
@{
    var title = ViewData["Title"] as string ?? "Kultura";
}
<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="utf-8" />
    <title>@title - Kultura</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="topbar">
        <div class="brand">Kultura</div>
        <nav>
            <a asp-page="/Index">Domov</a>
            <a asp-page="/Dogodki/Seznam">Dogodki</a>
            @if (User?.IsInRole("Organizator") == true)
            {
                <a asp-page="/Dogodki/Dodaj">Dodaj dogodek</a>
            }
            <a asp-page="/Priljubljeni">Priljubljeni</a>
            @if (User?.IsInRole("Admin") == true)
            {
                <a asp-page="/Admin/Odobritve">Admin: odobritve</a>
            }
            @if (User?.Identity?.IsAuthenticated != true)
            {
                <a asp-page="/Uporabnik/Prijava">Prijava</a>
                <a asp-page="/Uporabnik/Registracija">Registracija</a>
            }
        </nav>
        <div class="auth">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <span>Prijavljen: @User.Identity.Name</span>
                <form method="post" asp-page="/Uporabnik/Prijava" asp-page-handler="Logout" style="display:inline">
                    <button class="btn-small" type="submit">Odjava</button>
                </form>
            }
        </div>
    </header>
    <main class="content">
        @RenderBody()
    </main>
    <footer class="footer">
        <small>&copy; @(DateTime.Now.Year) Kultura</small>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>