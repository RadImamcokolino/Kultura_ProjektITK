@{
    var title = ViewData["Title"] as string ?? "Kultura";
}
<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="utf-8" />
    <title>@title - Kultura</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="topbar">
        <div class="brand">Kultura</div>
        <nav>
            <a asp-page="/Index">Domov</a>
            <a asp-page="/Dogodki/Seznam">Dogodki</a>
            <a asp-page="/Dogodki/Dodaj">Dodaj dogodek</a>
            <a asp-page="/Priljubljeni/Index">Priljubljeni</a>
            <a asp-page="/Uporabnik/Registracija">Registracija</a>
        </nav>
    </header>
    <main class="content">
        @RenderBody()
    </main>
    <footer class="footer">
        <small>&copy; @(DateTime.Now.Year) Kultura</small>
    </footer>
</body>
</html>