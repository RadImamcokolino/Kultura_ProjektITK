@model YourApp.Pages.Shared._EventRatingsPartialModel

<div class="mt-4">
    <h4>Ocene (@Model.Count), povprečje: @Model.Average ★</h4>
    @if (Model.Count == 0)
    {
        <p>Za ta dogodek še ni ocen.</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var r in Model.Ratings)
            {
                <li class="list-group-item">
                    <div><strong>@r.Stars ★</strong> — <small>@r.CreatedAt.ToLocalTime().ToString("g")</small></div>
                    @if (!string.IsNullOrWhiteSpace(r.Comment))
                    {
                        <div>@r.Comment</div>
                    }
                </li>
            }
        </ul>
    }
    <div class="mt-3">
        <a class="btn btn-outline-primary" asp-page="/Events/Rate" asp-route-EventId="@Model.EventId">Oceni ta dogodek</a>
    </div>
</div>